<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FBD6B2"
    android:paddingBottom="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Service_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ImGenCli"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/genclin" />

    <TextView
        android:id="@+id/Service_list_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/Service_list_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="TextView" />

    <Button
        android:id="@+id/button_services"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F27704"
        android:layout_gravity="center"
        android:text="Подробнее" />

</LinearLayout>