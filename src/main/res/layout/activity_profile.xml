<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEB887"
    tools:context=".ActivityProfile">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ButtonForPhoto"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:contentDescription="Insert your photo"
                app:srcCompat="@mipmap/ic_launcher_icon_ava_round" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                android:text="Профиль"
                android:textColor="#6B8E23"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Log"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="#6B8E23"
                    android:textSize="25sp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/ProfLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#6B8E23"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/Email"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="#6B8E23"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/ProfEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#6B8E23"
                    android:textSize="20sp"
                    android:textAlignment="viewStart"
                    android:text="TextView" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ButFromProfToServ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6B8E23"
                    android:textSize="20sp"
                    android:backgroundTint="#BC8F8F"
                    android:text="Каталог услуг" />

                <Button
                    android:id="@+id/ButToOrderHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#6B8E23"
                    android:textSize="20sp"
                    android:backgroundTint="#BC8F8F"
                    android:text="История заказов" />

                <Button
                    android:id="@+id/ButToKorz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#6B8E23"
                    android:textSize="20sp"
                    android:backgroundTint="#BC8F8F"
                    android:text="Корзина" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>